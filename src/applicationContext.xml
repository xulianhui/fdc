			</props>
		</property>
		<property name="mappingResources">
			<list>
				<value>com/fdc/pojo/Users.hbm.xml</value>
				<value>com/fdc/pojo/RecordRent.hbm.xml</value>
				<value>com/fdc/pojo/HouseNews.hbm.xml</value>
